{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
          "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*", "tsup.config.ts", "vitest.config.ts"]
}
